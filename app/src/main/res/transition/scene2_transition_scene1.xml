<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="sequential">
    <slide
        android:duration="500"
        android:slideEdge="top">

        <targets>
            <target android:targetId="@id/tvTitleLogin" />
        </targets>
    </slide>

    <slide
        android:duration="500"
        android:slideEdge="left">

        <targets>
            <target android:targetId="@id/etNameLogin" />
            <target android:targetId="@id/etPasswordLogin" />
        </targets>
    </slide>

    <slide
        android:duration="500"
        android:slideEdge="bottom">

        <targets>
            <target android:targetId="@id/bLogin" />
        </targets>
    </slide>

</transitionSet>