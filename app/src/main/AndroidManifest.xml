<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sgsaez.materialtransitions">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.fragment.PlayerActivity"/>
        <activity android:name=".ui.activity.pilot.list.PilotActivity"/>
        <activity android:name=".ui.activity.pilot.detail.PilotDetailActivity"/>
        <activity android:name=".ui.activity.TransitionTargetActivity1"/>
        <activity android:name=".ui.activity.TransitionTargetActivity2"/>
    </application>

</manifest>